<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewNameTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Новый заказ"/>


    <TextView
        android:id="@+id/textViewDescriptionTask"
        android:text="Описание"
        android:textSize="14sp"
        android:layout_below="@id/textViewNameTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22.12.2022 13:09"
        android:layout_below="@id/textViewNameTask"
        android:layout_alignParentEnd="true"/>


    <View
        android:layout_below="@+id/textViewDescriptionTask"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        />

</RelativeLayout>